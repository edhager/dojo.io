{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"baseUrl": ".",
		"importHelpers": true,
		"lib": [
			"DOM",
			"ES5",
			"ES2015.Promise",
			"es2015.iterable",
			"ES2015.symbol.wellknown",
			"ES2015.Symbol"
		],
		"experimentalDecorators": true,
		"module": "umd",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noImplicitThis": true,
		"noUnusedLocals": false,
		"noUnusedParameters": true,
		"outDir": "./_build",
		"preserveConstEnums": true,
		"removeComments": true,
		"rootDir": ".",
		"sourceMap": true,
		"target": "ES5"
	},
	"include": [
		"./support/**/*.ts",
		"./tests/**/*.ts",
		"./site/source/tutorials/003_creating_widgets/demo/finished/biz-e-corp/src/**/*.ts"
	]
}
